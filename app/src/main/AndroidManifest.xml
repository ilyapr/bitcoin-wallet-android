<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.bitzhash.wallet.bitcoin">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.bitzhash.wallet.bitcoin.BitcoinWalletApplication"
        android:allowBackup="false"
        android:forceDarkAllowed="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        tools:ignore="UnusedAttribute"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.bitzhash.wallet.bitcoin.ui.ChoiceCreateRestoreActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.bitzhash.wallet.bitcoin.ui.RestoreWalletActivity"
            android:label="@string/activity_restore_wallet"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.bitzhash.wallet.bitcoin.ui.BackupWalletActivity"
            android:label="@string/activity_backup_wallet"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.bitzhash.wallet.bitcoin.ui.RequestPinActivity"
            android:label="@string/activity_request_pin"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.bitzhash.wallet.bitcoin.ui.PinCodeActivity"
            android:label="@string/activity_pin_code"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.bitzhash.wallet.bitcoin.ui.AddressTypeActivity"
            android:label="@string/activity_address_type"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.bitzhash.wallet.bitcoin.ui.ScannerActivity"
            android:label="@string/activity_scanner"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.bitzhash.wallet.bitcoin.ui.SeedActivity"
            android:label="@string/activity_seed"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.bitzhash.wallet.bitcoin.ui.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.bitzhash.wallet.bitcoin.ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>